<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <span class="errors-title"><%= @book.errors.count %> errors prohibited this book from being saved:</span>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li class="errors-text"><%= message %></li>
      <% end %>
    </ul>
<% end %>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <div class="field"><%= f.text_field :title %></div>

  <h4>Body</h4>
  <div class="field"><%= f.text_area :body %></div>

  <div class="submit"><%= f.submit 'Update Book' %></div>

  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path, method: :get %>

<% end %>