<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th class="table-title">Title</th>
      <th class="table-body">Body</th>
      <th class="table-path" colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><span class="book-title"><%= book.title %></span></td>
        <td><span class="book-body"><%= book.body %></span></td>
        <td class="table-show"><%= link_to "Show", book_path(book.id), method: :get %></td>
        <td class="table-edit"><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td class="table-destroy"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2 class="index-new-title">New book</h2>

<% if @book.errors.any? %>
  <span class="errors-title"><%= @book.errors.count %> errors prohibited this book from being saved:</span>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li class="errors-text"><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <div class="field"><%= f.text_field :title %></div>

  <h4>Body</h4>
  <div class="field"><%= f.text_area :body %></div>

  <div class="submit"><%= f.submit ' Create Book ' %></div>
<% end %>